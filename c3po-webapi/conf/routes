# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                 controllers.Application.index()
GET     /c3po                             controllers.Application.index()
GET     /clear                            controllers.Application.clear()
GET     /collections                      controllers.Application.getCollections()
POST    /collections                      controllers.Application.setCollection(name: String)
GET     /properties                       controllers.Application.getProperties()

# Filter
GET     /filter                           controllers.FilterController.get(uid: String)
DELETE  /filter                           controllers.FilterController.remove(uid: String)
POST    /filter                           controllers.FilterController.add()
GET     /filter/values                    controllers.FilterController.getValues()

# Collection Overview
GET     /overview                         controllers.Overview.index()

# Elements Page
GET     /objects                          controllers.Elements.index()
GET     /objects/:id                      controllers.Elements.show(id: String)

# Samples Page
GET     /samples                          controllers.Samples.index()

# Export Page
GET     /export                           controllers.Export.index()
GET     /export/profile                   controllers.Export.profile()
GET     /export/matrix                    controllers.Export.csv()
    


# Profile page
#GET     /c3po/profile/              controllers.Profiles.index()
#GET     /c3po/profile/:id           controllers.Profiles.show(id: String)
#POST    /c3po/profile/:name         controllers.Profiles.submit(name: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
