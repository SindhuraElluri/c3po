# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#TODO remove the first in production...
GET      /                                 controllers.Application.index()
GET      /properties                       controllers.Application.getProperties()
GET      /property                         controllers.Application.getProperty(name: String)

#GET     /clear                            controllers.Application.clear()
#GET     /collections                      controllers.Application.getCollections()
#POST    /collections                      controllers.Application.setCollection(name: String)


#POST    /settings                         controllers.Application.setSetting()
#GET     /settings                         controllers.Application.getSetting(key: String)

# Filter
#GET     /filters                          controllers.FilterController.getAll()
#DELETE  /filter                           controllers.FilterController.remove(property: String)
#POST    /filter                           controllers.FilterController.add()
#GET     /filter/values                    controllers.FilterController.getValues()

# Collection Overview
GET     /overview                          controllers.Overview.index()
#GET     /overview/graph                   controllers.Overview.getGraph(property: String)

# Elements Page
GET     /objects                           controllers.Elements.index()
GET     /objects/:id                       controllers.Elements.show(id: String)

# Samples Page
GET     /samples                           controllers.Samples.index()
#GET     /samples/get                      controllers.Samples.getSamples(alg: String, size: Int, props: String ?= "")

# Export Page
GET     /export                            controllers.Export.index()
GET     /export/profile                    controllers.Export.profileToXML()
GET     /export/csv                        controllers.Export.exportToCSV()
#GET     /export/csv/filter                controllers.Export.exportFilterToCSV()

# Mail
POST    /feedback                         controllers.Mail.send()


# API v1
GET      /api/v1/properties               controllers.Application.getProperties()
GET      /api/v1/property                 controllers.Application.getProperty(name: String)

GET     /api/v1/objects                    controllers.Elements.indexAsJson()
GET     /api/v1/objects/:id                controllers.Elements.showAsJson(id: String)

GET     /api/v1/samples                    controllers.Samples.indexAsJson()

GET     /api/v1/export/csv                 controllers.Export.exportToCSV()


# Profile page
#GET     /profile/              controllers.Profiles.index()
#GET     /profile/:id           controllers.Profiles.show(id: String)
#POST    /profile/:name         controllers.Profiles.submit(name: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
