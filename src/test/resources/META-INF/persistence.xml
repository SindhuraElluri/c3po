<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="CollProPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        
        <class>com.petpet.collpro.datamodel.Element</class>
        <class>com.petpet.collpro.datamodel.Property</class>
        <class>com.petpet.collpro.datamodel.Value</class>
        <class>com.petpet.collpro.datamodel.StringValue</class>
        <class>com.petpet.collpro.datamodel.ValueSource</class>
        
        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
            <property name="hibernate.connection.url" value="jdbc:postgresql://127.0.0.1:5432/collpro"/>
            <property name="hibernate.connection.username" value="collpro"/>
            <property name="hibernate.connection.password" value="collpro"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
        </properties>
    </persistence-unit>
</persistence>